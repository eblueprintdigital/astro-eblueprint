---
import Socials from './Socials.astro';

import Scripts from './vendor/Scripts.astro';

// console.log(socials);
---

<!-- ======================
					///// Begin tt-footer /////
					=========================== -->
<footer id='tt-footer'>
  <div class='tt-footer-inner'>
    <!-- Begin footer column 
							========================= -->
    <div class='footer-col tt-align-center-left'>
      <div class='footer-col-inner'>
        <!-- You can use whatever button or link here -->
        <div class='tt-btn tt-btn-link'>
          <a href='#' class='scroll-to-top' data-hover='Back to top'
            >Back to top</a
          >
        </div>
      </div>
      <!-- /.footer-col-inner -->
    </div>
    <!-- Begin footer column -->

    <!-- Begin footer column 
							========================= -->
    <div class='footer-col tt-align-center order-m-last'>
      <div class='footer-col-inner'>
        <div class='tt-copyright'>
          &copy; <span id='copyright'>{new Date().getFullYear()}</span> Copyright
          &mdash; e-blueprint digital
        </div>
      </div>
      <!-- /.footer-col-inner -->
    </div>
    <!-- Begin footer column -->

    <!-- Begin footer column 
							========================= -->
    <div class='footer-col tt-align-center-right'>
      <div class='footer-col-inner'>
        <div class='footer-social'>
          <div class='footer-social-text'>
            <span>Follow</span><i class='fas fa-share-alt'></i>
          </div>
          <div class='social-buttons'>
            <Socials />
          </div>
          <!-- /.social-buttons -->
        </div>
        <!-- /.footer-social -->
      </div>
      <!-- /.footer-col-inner -->
    </div>
    <!-- Begin footer column -->
  </div>
  <!-- /.tt-section-inner -->
</footer>
<!-- End tt-footer -->

<Scripts />

<script>
  const copyrightSpan = document.querySelector('#copyright');
  copyrightSpan.textContent = new Date().getFullYear().toString();
</script>
